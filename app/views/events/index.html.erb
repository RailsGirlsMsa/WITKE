<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @events.each do |event| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= event.title %></h2>
        <h6><%= event.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div>
        <%= raw(event.body).truncate(358) %>
      </div>

      <div class="text-center">
        <%= link_to "READ MORE", event_path(event) %>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>
